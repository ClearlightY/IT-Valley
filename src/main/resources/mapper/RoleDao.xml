<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <!-- Mybatis会动态实现daoImpl,不过需要在mapper文件夹下创建BookDao.xml和AppointmentDao.xml
  		spring-dao.xml文件会自动扫描mapper文件夹下的配置 -->
    <!-- 
    1.namespace是该xml对应的接口的全名
    2.select和update中的id对应方法名
    3.resultType是返回值类型
    4.parameterType是参数类型(可选)
    5.#{...}填写的是方法的参数 
    6.parameterType:输入参数类型
    7.resultType:输出参数类型
    -->
<mapper namespace="top.clearlight.dao.RoleDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<resultMap id="BaseResultMap" type="top.clearlight.entity.Role">
        <id column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
    </resultMap>
    
	<!-- 根据ID查询角色-->
	<select id="selectById" resultType="top.clearlight.entity.Role">
		SELECT
        	*
		FROM
			role
		WHERE 
			role_id = #{id}
     </select>
     
     <!-- 根据名称查询角色-->
	<select id="selectByName" resultType="top.clearlight.entity.Role">
		SELECT
        	*
		FROM
			role
		WHERE 
			role_name = #{name}
     </select>
   
     <!-- 查询所有的后台用户 -->
     <select id="selectAll" resultType="top.clearlight.entity.Role">
		SELECT
        	*
		FROM
			role
		ORDER BY 
			role_id	
		<if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
     </select>
     
     <!-- 根据后台用户ID查询所关联的所有角色 -->
     <select id="selectAllByAdminUserId" resultType="top.clearlight.entity.Role">
		SELECT
        	a.*
		FROM
			role a
		JOIN 
			admin_user_role_rel b
		ON 
			a.role_id = b.role_id 
		<if test="adminUserId != null">
			WHERE
				b.admin_user_id = #{adminUserId}
		</if>
		<if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
     </select>
     
     <!-- 新增角色 -->
     <insert id="insert" parameterType="top.clearlight.entity.Role" keyProperty="roleId" useGeneratedKeys="true">
     	INSERT INTO role
     	(role_name,
     	 create_date,
     	 update_date)
     	VALUES
     	(#{roleName},
     	 #{createDate},
     	 #{updateDate})
     </insert>
     
     <!--  更新角色 -->
     <update id="update" parameterType="top.clearlight.entity.Role">
     	UPDATE 
     		role
     	SET 
     		role_name = #{roleName},
     		create_date = #{createDate},
     		update_date = #{updateDate}
     	WHERE 
     		role_id = #{roleId}
     </update>
     
     <!-- 根据ID删除角色 -->
     <delete id="deleteById">
     	DELETE FROM 
     		role
     	WHERE 
     		role_id = #{id}
     </delete>
     
     <!-- 统计所有角色 -->
     <select id="countAll" resultType="java.lang.Integer">
     	SELECT 
     		count(1)
     	FROM 
     		role
     </select>
     
</mapper>