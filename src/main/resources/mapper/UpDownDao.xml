<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <!-- Mybatis会动态实现daoImpl,不过需要在mapper文件夹下创建BookDao.xml和AppointmentDao.xml
  		spring-dao.xml文件会自动扫描mapper文件夹下的配置 -->
    <!-- 
    1.namespace是该xml对应的接口的全名
    2.select和update中的id对应方法名
    3.resultType是返回值类型
    4.parameterType是参数类型(可选)    
    5.#{...}填写的是方法的参数 
    6.parameterType:输入参数类型
    7.resultType:输出参数类型
    -->
<mapper namespace="top.clearlight.dao.UpDownDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
    <resultMap id="BaseResultMap" type="top.clearlight.entity.UpDown">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="uid" jdbcType="INTEGER" property="uid"/>
        <result column="tid" jdbcType="INTEGER" property="tid"/>
        <result column="t_uid" jdbcType="INTEGER" property="t_uid"/>
        <result column="up_down" jdbcType="BIT" property="upDown"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="is_delete" jdbcType="BIT" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, uid, tid, t_uid, up_down,create_date, is_delete
    </sql>
    <!-- 分页查询 -->
    <!-- <select id="select" resultType="User">
        select
        	b.user_id,
        	b.user_name,
        	b.signature,
        	b.avatar 
        from visit a,user b
        where a.vid = #{vid}
        and a.is_delete = '0'
        and a.uid = b.user_id
        order by a.create_date desc
        <if test="start != null">
            limit #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select> -->
    <!-- 添加赞同或者反对记录 -->
    <insert id="insert" parameterType="top.clearlight.entity.UpDown" keyProperty="id" useGeneratedKeys="true">
        insert into up_down 
        (id, 
         uid,
         tid,
         t_uid,
         up_down,
         create_date,
         is_delete)
        values 
        (#{id,jdbcType=INTEGER}, 
         #{uid,jdbcType=INTEGER}, 
         #{tid,jdbcType=INTEGER},
         #{t_uid, jdbcType=INTEGER},
         #{upDown,jdbcType=BIT},
         #{createDate,jdbcType=TIMESTAMP},
         #{isDelete,jdbcType=BIT})
    </insert>
    <!-- 统计赞同或者反对的数量 -->
    <select id="countUpOrDown" resultType="java.lang.Integer">
    	select count(1)
    	from up_down
    	where tid = #{tid}
    	and up_down = #{upDown}
    	and is_delete = '0'
    </select>
    <!-- 是否已点赞或者点踩 -->
    <select id="isUpOrDown" resultType="java.lang.Integer">
    	select count(1)
    	from up_down
    	where uid = #{uid}
    	and tid = #{tid}
    	and is_delete = '0'
    </select>
    <!-- 更新状态 -->
    <update id="update" parameterType="top.clearlight.entity.UpDown">
        update up_down
        set up_down = #{upDown,jdbcType=BIT},
        create_date = #{createDate,jdbcType=TIMESTAMP},
        is_delete = #{isDelete,jdbcType=BIT}
        where uid = #{uid,jdbcType=INTEGER}
        and tid = #{tid,jdbcType=INTEGER}
    </update>
</mapper>